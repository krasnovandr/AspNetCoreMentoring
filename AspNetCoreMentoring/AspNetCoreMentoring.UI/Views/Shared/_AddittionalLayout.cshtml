<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AspNetCoreMentoring.UI</title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Northwind App</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">Products </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Categories" asp-action="Index">Categories </a>
                </li>
            </ul>

        </div>
    </nav>
    <div class="container body-content ">
        <div class="row">
            <div class="col-md-4">
                <p>Welcome to the Mentoring application</p>
                <img src="~/images/mentoring-quote.jpg" class="img-fluid" />
            </div>
            <hr />
            @RenderBody()
        </div>
    </div>
    <footer class="footer">
        <div class=" text-center ">
            &copy; @DateTime.Now.Year Copyright: All rights reserver powered by Andrei
        </div>

    </footer>
    <script src="~/node_modules/jquery/dist/jquery.js"></script>
    <script src="~/node_modules/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
    <script src="~/node_modules/globalize/dist/globalize.js"></script>
    <script src="~/node_modules/jquery-validation-globalize/jquery.validate.globalize.js"></script>
</body>
</html>
